<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
window.onload = function () {
    $("#image").hide();

    var columnChartData= @Html.Raw(ViewBag.DataPointsColumn);
    var stateData= @Html.Raw(ViewBag.DataPointsState);
    var cityData= @Html.Raw(ViewBag.DataPointsCity);
    var revenueData= @Html.Raw(ViewBag.DataPointsRevenue);

    console.log(revenueData);
    console.log(columnChartData);
    PerformanceIndicator(stateData,cityData);
    SaleAmountPerDay(columnChartData);
    SaleRevenuePerDay(revenueData);
}
</script>
</html>   