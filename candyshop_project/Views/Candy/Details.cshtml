@model CandyCardViewModel
<h1>@Model.Candy.Name</h1>

<div class="thumbnail">
    <img alt="@Model.Candy.Name" src="@Model.Candy.ImageUrl" />
    <div class="caption-full">
        <h3 class="pull-right">
                @if(Model.BestDiscount is null){
                    <mark>@Model.Candy.Price.ToString("c")</mark>;
                }
                else
                {
                    <del>@Model.Candy.Price.ToString("c")</del>;
                    <mark>@Model.BestDiscount.PriceWithDiscount.ToString("c")</mark>;
                }</h3>
        <h3><a href="#>@Model.Candy.Name"</h3>
        <p>@Model.Candy.Description</p>
    </div>
    <div class="addToCart">
        <p class="button">
            <a class="btn btn-primary"
               asp-controller="ShoppingCart"
               asp-action="AddToShoppingCart"
               asp-route-candyId="@Model.Candy.CandyId">Add to Cart</a>
        </p>
    </div>
</div>