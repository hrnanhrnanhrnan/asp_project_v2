@model Candy

<div>
    <h2 class="text-danger">Are you sure you want to delete this candy?</h2>
</div>

<form method="post" asp-action="DeleteProduct">
    <input asp-for="CandyId" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Customer</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AmountInStock"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AmountInStock" class="form-control" disabled />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6">
            <input type="submit" class="btn btn-danger text-left" value="Delete" />
            <a asp-action="ListOfCandies" class="btn btn-primary text-right">Back</a>
        </div>
    </div>
</form>